<Window x:Class="ObjectDetectionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectDetectionApp"
        mc:Ignorable="d"
        Title="AgriPi Object Detection" Height="720" Width="960">
    <Grid Background="#FF1E1E1E" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,0,8,0" />
                </Style>
            </StackPanel.Resources>

            <Button x:Name="StartButton"
                    Width="120"
                    Height="36"
                    Content="Start"
                    Click="OnStartClicked" />
            <Button x:Name="StopButton"
                    Width="120"
                    Height="36"
                    Content="Stop"
                    Click="OnStopClicked"
                    IsEnabled="False" />
            <TextBlock x:Name="StatusText"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Text="Loading model..."
                       TextWrapping="Wrap"
                       Width="Auto" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Image x:Name="PreviewImage" Stretch="Uniform" />
            <Canvas x:Name="OverlayCanvas" IsHitTestVisible="False" />
        </Grid>
    </Grid>
</Window>
