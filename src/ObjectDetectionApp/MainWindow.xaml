<Window x:Class="ObjectDetectionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectDetectionApp"
        mc:Ignorable="d"
        Title="AgriPi Object Detection" Height="720" Width="960">
    <Grid Background="#FF1E1E1E" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,12" Grid.Row="0" Spacing="8">
            <Button x:Name="StartButton" Content="Start" Width="100" Height="36" Click="OnStartClicked" />
            <Button x:Name="StopButton" Content="Stop" Width="100" Height="36" Click="OnStopClicked" IsEnabled="False" />
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Foreground="White" Margin="12,0,0,0" Text="Camera idle" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Image x:Name="PreviewImage" Stretch="Uniform" />
            <Canvas x:Name="OverlayCanvas" IsHitTestVisible="False" />
        </Grid>
    </Grid>
</Window>
